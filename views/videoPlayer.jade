extends layout

block content
    div.container
        div.row
            div.videoPlayer
                p #{data[0].name}
                -console.log("data : " + data[0].AVG);
                video(controls="")
                    source(src='#{data[0].path}', type='video/mp4')
                    |   Your browser does not support HTML5 video.                    
                script(type='text/javascript').
                    $(function() {
                        $(".RatingBar").barrating({
                        theme: 'css-stars'     
                        });
                        $("#"+"#{data[0].id}").barrating('set', "#{data[0].AVG}");
                    });
                p Додано : #{data[0].added_date}
                p Загрузив : #{data[0].full_name}
                .br-wrapper.br-theme-css-stars                   
                    select.RatingBar(id="#{data[0].id}")
                        option(value='')
                        option(value='1') 1
                        option(value='2') 2
                        option(value='3') 3  
                        option(value='4') 4
                        option(value='5') 5
                    //- div.br-widget
                p Рейтинг : "#{data[0].AVG}"
            div.col-md-10
                div.commentBlock
                    p Name
                    p lalaala
                    p lalala


block otherScripts
    script(src='/libs/jquery-bar-rating/dist/jquery.barrating.min.js')
