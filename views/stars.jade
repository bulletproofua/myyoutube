extends layout

block content

    .stars.stars-example-fontawesome-o
        select#example-fontawesome-o(name='rating', data-current-rating='4.6', autocomplete='off')
            option(value='')    
            option(value='1') 1    
            option(value='2') 2  
            option(value='3') 3   
            option(value='4') 4     
            option(value='5') 5   
        span.title.current-rating
            | Rating: 
            span.value  
        span.title.your-rating.hidden
            | Your rating: 
            span.value
            | &nbsp;   
            a.clear-rating(href='#')


block otherScripts
    script(src='/libs/jquery-bar-rating/dist/jquery.barrating.min.js')
    script(src='/js/examples.js')