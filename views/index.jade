extends layout

block content
    div.container
        div.row
            div.col-md-12
                each thing in data
                    div.col-md-3.videoHome
                        script(type='text/javascript').
                            $(function() {
                                $(".RatingBar").barrating({
                                theme: 'css-stars'     
                                });
                                $("#"+"#{thing.id}").barrating('set', "#{thing.AVGRATING}");  
                                $("#"+"#{thing.id}").barrating('readonly', true);                              
                            });
                        a(href="/video?id=#{thing.id}") 
                            p.size #{thing.name}                     						
                            img.videoLink(src="#{thing.screenshot_path}", alt="screenshot")
                        p.size #{thing.added_date}
                        p #{thing.full_name}
                        .br-wrapper.br-theme-css-stars                      
                            select.RatingBar(id="#{thing.id}")
                                option(value='1') 1
                                option(value='2') 2
                                option(value='3') 3  
                                option(value='4') 4
                                option(value='5') 5
                        p Рейтинг : #{thing.AVGRATING}
                        
                        

block otherScripts
    script(src='/libs/jquery-bar-rating/dist/jquery.barrating.min.js')
