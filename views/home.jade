extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{userName.full_name}
		div.row
			div.col-md-12.col-sm-12
				each thing in data
					div.col-md-3.col-sm-6.col-xs-12.videoHome
						a(href="/video?id=#{thing.id}")                                             						
							img.videoLink(src="#{thing.screenshot_path}", alt="screenshot")
							p 
								span.dateVideoHome #{thing.added_date}
								.dateVideoHome.dateVideoHomeBack
							p.size.textCenter #{thing.name} 
							hr
						.colorBlock    
							.text-center
								input(id='#{thing.id}', class="rating rating-loading pull-center", value='#{thing.AVGRATING}', data-min="0", data-max="5", data-step="0.1", data-size="xs2", readonly = true )       
							.bottomVideoHome
								p Comments: #{thing.commentsCount}	

		div.col-md-10.col-md-offset-1
			.panel.panel-primary.homeVideoU
				.panel-heading 
					p#UploadsFile File Uploads
				.panel-body   					
					input(type='file',style='display: none', name='uploadFiles',id='uploadFiles',multiple)
					div(style='margin-bottom:15px')
						button.btn.btn-primary(id='addFilesButton') Add files
						button.btn.btn-primary(id='uploadAllFilesButton', style='margin-left:5px') Upload All
					//- div.progress
					div#progress.progress-bar(role='progressbar', style='width: 0%')
					table#files.table

block otherScripts
	script(src='/js/video.upload.js')
	script(src='/libs/jquery-bar-rating/dist/jquery.barrating.min.js')