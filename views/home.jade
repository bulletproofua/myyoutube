extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{userName.full_name}
		div.col-md-12
			each thing in data
				div.col-md-3.videoHome
					p id = #{thing.id}
					a(href="/video?id=#{thing.id}")  
						p.size #{thing.name}                     						
						img.videoLink(src="#{thing.screenshot_path}", alt="screenshot")
					p.size #{thing.added_date}
					p #{thing.full_name}		
					input(id='#{thing.id}', class="rating rating-loading", value='#{thing.AVGRATING}', data-min="0", data-max="5", data-step="0.1", data-size="xs", readonly = true, showClear = false, hoverChangeCaption = false, hoverEnabled = false )
					
		div.col-md-10.col-md-offset-1 
			h1 File Uploads
			input(type='file',style='display: none', name='uploadFiles',id='uploadFiles',multiple)
			div(style='margin-bottom:15px')
				button.btn.btn-primary(id='addFilesButton') Add files
				button.btn.btn-primary(id='uploadAllFilesButton', style='margin-left:5px') Upload All
			div.progress
			div#progress.progress-bar(role='progressbar', style='width: 0%')
			table#files.table

block otherScripts
	script(src='/js/video.upload.js')
	script(src='/libs/jquery-bar-rating/dist/jquery.barrating.min.js')