extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.full_name}.
						div.signup-wall
							ul.user-details
								li Username ---> #{user.login}
								li full_name --> #{user.full_name} 
						a(href='/signout', class='text-center new-account') Sign Out
		div.col-md-12
			each thing in data
				div.col-md-3.videoHome
					script(type='text/javascript').
						$(function() {
							$(".RatingBar").barrating({
							theme: 'css-stars'     
							});
							$("#"+"#{thing.id}").barrating('set', "#{thing.rating}");
						});
					a(href="/video?id=#{thing.id}") 
						p.size #{thing.name}                     						
						img.videoLink(src="#{thing.screenshot_path}", alt="screenshot")
					p.size #{thing.added_date}
					p #{thing.full_name}
					.br-wrapper.br-theme-css-stars                      
						select.RatingBar(id="#{thing.id}")
							option(value='1') 1
							option(value='2') 2
							option(value='3') 3  
							option(value='4') 4
							option(value='5') 5
						p Рейтинг: #{thing.rating}

					
		div.col-md-10
			h1 File Uploads
			hr
			input(type='file',style='display: none', name='uploadFiles',id='uploadFiles',multiple)
			div(style='margin-bottom:15px')
				button.btn.btn-primary(id='addFilesButton') Add files
				button.btn.btn-primary(id='uploadAllFilesButton', style='margin-left:5px') Upload All
			div.progress
			div#progress.progress-bar(role='progressbar', style='width: 0%')
			table#files.table

block otherScripts
	script(src='/js/video.upload.js')
	script(src='/libs/jquery-bar-rating/dist/jquery.barrating.min.js')